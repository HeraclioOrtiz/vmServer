# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - VILLA MITRE
# ============================================
# ⚠️ NO SUBIR ESTE ARCHIVO CON CREDENCIALES REALES A GITHUB
# ⚠️ Copiar como .env en el servidor y completar valores reales

# APLICACIÓN
APP_NAME="Villa Mitre API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=https://appvillamitre.surtekbb.com

# LOGGING
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# BASE DE DATOS
# ⚠️ Configurar con valores del servidor FastPanel
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=villamitre_prod
DB_USERNAME=villamitre_user
DB_PASSWORD=

# DRIVERS DE CACHE Y SESIONES
# ⚠️ Usar Redis en producción para mejor performance
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_PREFIX=
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# REDIS
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# MAIL
# ⚠️ Configurar servicio de email real
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (Si usas S3 para archivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# PUSHER (Broadcasting - opcional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# VITE (Frontend assets)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# JWT AUTHENTICATION
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=30

# CORS
# ⚠️ Configurar dominios permitidos
SANCTUM_STATEFUL_DOMAINS=appvillamitre.surtekbb.com,localhost,127.0.0.1

# CONFIGURACIONES ADICIONALES
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ============================================
#
# 1. En el servidor, copiar este archivo:
#    cp .env.production.example .env
#
# 2. Generar APP_KEY:
#    php artisan key:generate
#
# 3. Crear base de datos en FastPanel:
#    - Base de datos: villamitre_prod
#    - Usuario: villamitre_user
#    - Password: [generar seguro]
#
# 4. Completar credenciales:
#    - DB_PASSWORD
#    - JWT_SECRET (generar con: php artisan jwt:secret)
#    - MAIL_* (si usas envío de emails)
#
# 5. Verificar que APP_DEBUG=false
#
# 6. Ejecutar migraciones:
#    php artisan migrate --force
#
# 7. Ejecutar seeder de producción:
#    php artisan db:seed --class=ProductionSeeder --force
#
# 8. Optimizar aplicación:
#    php artisan optimize
#
# ============================================
